<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/findFragment">

    <fragment
        android:id="@+id/findFragment"
        android:name="com.example.mirea_kurs_4_sem.find.FindFragment"
        android:label="fragment_find"
        tools:layout="@layout/fragment_find" />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.mirea_kurs_4_sem.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" >
        <argument
            android:name="id_film"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/recommendationFragment"
        android:name="com.example.mirea_kurs_4_sem.recommendation.RecommendationFragment"
        android:label="fragment_recommendation"
        tools:layout="@layout/fragment_recommendation" />
    <activity
        android:id="@+id/actvity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/activity_register"
        tools:layout="@layout/activity_register" />
</navigation>